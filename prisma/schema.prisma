// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Book {
    id          String   @id @unique
    title       String
    author      String
    description String
    price       Float
    rating      Float
    cover       String
    dateAdded   DateTime @default(now())
    reviews     Review[]
}

model UserInfo {
    accID    String @id @unique
    name     String
    username String
}

model Review {
    id       String @id @unique @default(cuid())
    title    String
    body     String
    rating   Int
    authorID String
    bookID   String
    book     Book   @relation(fields: [bookID], references: [id])
}

model Order {
    id        String   @id @unique @default(cuid())
    accID     String
    itemIDs   String
    total     Float
    createdAt DateTime @default(now())
}
